---
import { posts } from "@/utils/content";

// import fs from "fs";

interface Props {
  url: string;
}
const { url } = Astro.props;

// const sites: Record<string, Record<string, string>> = JSON.parse(
//   fs.readFileSync("content/sites.json", "utf-8"),
// );
// const { img, title, desc } = Object.keys(sites).includes(url)
//   ? sites[url]
//   : { img: "", title: "", desc: "" };

let img = `icons/${url.split("/")[1]}.png`;
let post = posts.find((post) => post.id == url)!;
let title = post.data.title;
let desc = post.data.description;
---

<style>
  .card {
    padding: 5px 15px;
    display: grid;
    grid-template-columns: 60px 1fr;
    /*grid-template-columns: 1fr;*/
    grid-gap: 15px;
    align-items: center;
  }
  /*.card:nth-child(odd) {
    background-color: var(--bg-1);
  }*/
  /*.card:hover {
    background-color: var(--bg-1);
  }*/
  .title {
    font-weight: bold;
    color: var(--accent);
  }
  a:hover .title {
    text-decoration: underline dotted;
  }
  a:active,
  a:hover {
    color: unset !important;
  }
  img {
    width: 100%;
    border-radius: 15px;
  }
  a {
    font-weight: inherit;
    text-decoration: inherit;
    color: inherit;
  }
</style>

<a class="card" href={`${url}`}>
  <div class="sp">
    {img && <img src={img} />}
  </div>
  <div>
    <span class="title" set:html={title} />
    <br />
    <span set:html={desc} />
  </div>
</a>

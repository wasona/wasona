---
import { encode } from "@/utils/ucsur";
interface Props {
  // sitelen pona
  sp?: string;
  // sitelen Lasina
  sl: string;
  // translation
  m: string;
}
const { sp, sl, m } = Astro.props;
const sp_ = sp || encode(sl);
---

<style>
  p {
    display: flex;
    margin: 2px 0;
  }
  span {
    /* padding: 10px 15px; */
    display: none;
  }
</style>

<style is:global>
  .tabbed-sp span:nth-child(1) {
    display: initial;
  }
  .tabbed-sl span:nth-child(2) {
    display: initial;
  }
  .tabbed-m span:nth-child(3) {
    display: initial;
  }
  .tabbed-sp p,
  .tabbed-sl p {
    direction: ltr;
  }
</style>
<p>
  <span dir="ltr" class="sp" set:html={sp_} />
  <span dir="ltr" set:html={sl} />
  <span set:html={m} />
</p>

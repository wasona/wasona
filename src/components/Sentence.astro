---
import { encode } from "@/utils/ucsur";
interface Props {
  // sitelen pona
  sp?: string;
  // sitelen Lasina
  sl: string;
  // translation
  m: string;
  // spoiler shield for practice
  hide?: "sp" | "sl" | "m";
}
const onclick = "this.classList.toggle('revealed')";
const { sp, sl, m, hide } = Astro.props;
const sp_ = sp || encode(sl);
---

<style>
  .sentence {
    padding: 15px 15px 5px 15px;
    border-left: 2px dotted var(--grey);
    page-break-inside: avoid;
  }
  .sentence:nth-child(odd) {
    background-color: var(--bg-1);
  }
</style>
<div class="sentence">
  <span class="sp" set:html={sp_} />
  <br />
  <span class="sl" set:html={sl} />
  <br />
  <span set:html={m} />
</div>

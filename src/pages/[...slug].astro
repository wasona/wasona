---
import BaseHead from "@/components/BaseHead.astro";
import Footer from "@/components/Footer.astro";
import Header from "@/components/Header.astro";
import LangSelect from "@/components/LangSelect.astro";
import PrevNext from "@/components/PrevNext.astro";
import { getLang, posts, prevnexts } from "@/utils/content";
import { type CollectionEntry, render } from "astro:content";

export async function getStaticPaths() {
  const paths = posts.map((post, i) => ({
    params: { slug: post.id },
    props: { ...post },
  }));
  return paths;
}
const rtl = ["he", "ar"];

type Props = CollectionEntry<"blog">;
const post = Astro.props;
const { Content } = await render(post);
const lang = getLang(post);
const prevnext = post.filePath!.includes("index.md")
  ? undefined
  : prevnexts[lang][post.id];
---

<html lang="en">
  <head>
    <BaseHead title={post.data.title} description={post.data.description} />
  </head>

  <body>
    <Header />
    <main dir={rtl.includes(lang) ? "rtl" : "ltr"}>
      <article>
        <h1>{post.data.title}</h1>
        {
          prevnext ? (
            <PrevNext prevnext={prevnext} />
          ) : (
            <LangSelect current={post.id} />
          )
        }
        <section>
          <Content />
        </section>
        {
          prevnext ? (
            <PrevNext prevnext={prevnext} />
          ) : (
            <LangSelect current={post.id} />
          )
        }
      </article>
    </main>
    <Footer />
  </body>
</html>
